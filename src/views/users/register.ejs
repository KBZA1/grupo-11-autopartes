                    <input class="campos" type="email" name="email" id="mail-r" placeholder="E-mail">
                    <input class="campos" type="password" name="contraseña" id="contra" placeholder="Ingrese Contraseña">
                    <!--<input class="campos" type="password" name="conf-contra" id="conf-contra" placeholder="Confirme su contraseña"> -->
                    <div><p>Añada imagen de usuario: </p></div>
                    <input class= "campos" id="forma" type="file" placeholder="Imagen" name="imagen">
                    </div>
                    <button class="crear-cuenta" type="submit">CREAR CUENTA</button>
           </form>
        </section>
   </main> 
